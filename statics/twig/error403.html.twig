{# app/Resources/TwigBundle/views/Exception/error404.html.twig #}
{% extends 'MedAppBundle::base.html.twig' %}
{% trans_default_domain 'MedAppBundle' %}
{% block title %}MedApp - 403{% endblock title %}
{% block stylesheets %}
